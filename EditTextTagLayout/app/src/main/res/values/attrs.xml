<resources>
    <declare-styleable name="RatingBar">
        <attr name="backgroundColor" format="color" />
        <attr name="foregroundColor" format="color" />
        <attr name="progressPercentage" format="integer" />
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ShadowCardView">
        <attr name="shadow" format="boolean" />
        <attr name="text" format="string" />
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="StarRating">
        <attr name="clickable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="LoadingButton">
        <attr name="enabledBackground" format="integer"/>
        <attr name="disabledBackground" format="integer"/>
        <attr name="buttonText" format="string"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="PaddingButton">
        <attr name="paddingButtonText" format="string"/>
        <attr name="paddingButtonImage" format="integer"/>
    </declare-styleable>
</resources>